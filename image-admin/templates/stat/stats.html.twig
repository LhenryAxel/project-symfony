{% extends 'base.html.twig' %}

{% block main %}
    <main class="p-10">
        <h1 class="text-4xl font-bold mb-6">Statistiques des images</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success shadow-lg mb-4">
            <div>
                <span>{{ message }}</span>
            </div>
        </div>
    {% endfor %}

    <h2 class="text-2xl font-bold mb-4">GÃ©nÃ©rer un fichier Excel</h2>
    <form method="GET" action="{{ path('generate_excel') }}" class="flex flex-col gap-4 mb-10 w-full max-w-md">
        <label class="form-control w-full">
            <div class="label"><span class="label-text">Nom du fichier (avec .xlsx)</span></div>
            <input type="text" name="filename" class="input input-bordered w-full" placeholder="ex: stats.xlsx" required>
        </label>

        <label class="form-control w-full">
            <div class="label"><span class="label-text">Dossier de destination</span></div>
            <input type="text" name="path" class="input input-bordered w-full" placeholder="ex: public (par dÃ©faut)">
        </label>

        <button type="submit" class="btn btn-primary w-full">GÃ©nÃ©rer le fichier</button>
    </form>


    <div class="flex gap-4 mb-6">
        <a href="{{ path('send_stats_email') }}" class="btn btn-outline btn-info">ðŸ“§ Envoyer Email</a>
    </div>

        <table class="table w-full mb-8">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Vues</th>
                    <th>RequÃªtes</th>
                    <th>TÃ©lÃ©chargements</th>
                </tr>
            </thead>
            <tbody>
                {% for stat in stats %}
                    <tr>
                        <td>{{ stat.filename }}</td>
                        <td>{{ stat.view }}</td>
                        <td>{{ stat.request }}</td>
                        <td>{{ stat.download }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <canvas id="statsChart" width="600" height="300"></canvas>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('statsChart').getContext('2d');

        const chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: {{ stats|map(s => s.filename)|json_encode|raw }},
                datasets: [
                    {
                        label: 'Vues',
                        backgroundColor: 'rgba(54, 162, 235, 0.5)',
                        data: {{ stats|map(s => s.view)|json_encode|raw }}
                    },
                    {
                        label: 'RequÃªtes',
                        backgroundColor: 'rgba(255, 206, 86, 0.5)',
                        data: {{ stats|map(s => s.request)|json_encode|raw }}
                    },
                    {
                        label: 'TÃ©lÃ©chargements',
                        backgroundColor: 'rgba(75, 192, 192, 0.5)',
                        data: {{ stats|map(s => s.download)|json_encode|raw }}
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Statistiques des images'
                    }
                }
            }
        });
    </script>
{% endblock %}
