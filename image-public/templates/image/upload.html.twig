{% extends 'base.html.twig' %}

{% block header %}
	<div class="hero bg-base-200 min-h-50">
		<div class="hero-content text-center">
			<div class="max-w-md">
				<h1 class="text-5xl font-bold">Publier une image</h1>
			</div>
		</div>
	</div>
{% endblock %}


{% block main %}
	<section class="flex flex-col items-center justify-center gap-8 bg-base-200">
		{% if success is defined %}
			<div role="alert" class="alert alert-success">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
					<path 
						stroke-linecap="round" 
						stroke-linejoin="round" 
						stroke-width="2" 
						d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" 
					/>
				</svg>
				<span>L'image a été publié !</span>
			</div>
		{% endif %}

		{% if failure is defined %}
			<div role="alert" class="alert alert-error">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
					<path 
						stroke-linecap="round" 
						stroke-linejoin="round" 
						stroke-width="2" 
						d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" 
					/>
				</svg>
				<span>{{ error|default('Une erreur est survenue lors de la publication du fichier') }}</span>
			</div>
		{% endif %}
	
	
		<form method="post" enctype="multipart/form-data" 
			class="flex flex-col items-center justify-center gap-4 bg-base-100 p-4 py-12 rounded-lg shadow-md w-full max-w-md"
		>
			<label class="floating-label">
				<span>Image</span>
				<input type="file" name="file" class="file-input" required>
			</label>
			
			<button type="submit" class="btn btn-wide">Envoyer</button>
		</form>
	</section>
{% endblock %}

